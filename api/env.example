# ===========================================
# ESCORT DIRECTORY API - ENVIRONMENT CONFIG
# ===========================================
# Copy this file to .env and fill in your values
# cp env.example .env

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Port number for the API server
PORT=5000

# Application environment (development, production, test)
NODE_ENV=development

# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:5173

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_CONN=mongodb+srv://username:password@cluster.mongodb.net/escort_directory

# ===========================================
# JWT CONFIGURATION
# ===========================================
# JWT secret key for token signing (minimum 32 characters)
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long

# ===========================================
# CLOUDINARY CONFIGURATION
# ===========================================
# Cloudinary cloud name
CLOUDINARY_APP_NAME=your_cloudinary_cloud_name

# Cloudinary API key
CLOUDINARY_API_KEY=your_cloudinary_api_key

# Cloudinary API secret
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Cloudinary URL (optional)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# ===========================================
# STRIPE CONFIGURATION (OPTIONAL)
# ===========================================
# Stripe secret key for payment processing
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe webhook secret for payment verification
# STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ===========================================
# TWILIO CONFIGURATION (OPTIONAL)
# ===========================================
# Twilio account SID for SMS functionality
# TWILIO_ACCOUNT_SID=your_twilio_account_sid

# Twilio auth token
# TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Twilio phone number
# TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Rate limiting - requests per minute per IP
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
# SESSION_SECRET=your_session_secret_here

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level (error, warn, info, debug)
# LOG_LEVEL=info

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable email verification
# ENABLE_EMAIL_VERIFICATION=true

# Enable SMS verification
# ENABLE_SMS_VERIFICATION=false

# Enable two-factor authentication
# ENABLE_2FA=false

# Enable content moderation
# ENABLE_CONTENT_MODERATION=true

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
# Enable detailed logging in development
# DEBUG=true

# Enable API documentation
# ENABLE_SWAGGER=true 